# Copy this file to .env and fill values (DO NOT commit .env with secrets)
MONGO_URI=
PORT=4000

# JWT
JWT_SECRET=change_this_access_secret
JWT_REFRESH_SECRET=change_this_refresh_secret
ACCESS_EXPIRES=15m
REFRESH_EXPIRES=7d

# Frontend URL used in emails/reset links
CLIENT_URL=http://localhost:3001

# SMTP (optional for sending emails)
SMTP_HOST=
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=
SMTP_FROM="No Reply <no-reply@example.com>"

# Other
NODE_ENV=development
